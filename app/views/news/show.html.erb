<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mt-5">News Articles</h1>
      <ul class="list-group">
        <% @articles.each do |article| %>
          <li class="list-group-item">
            <h2><%= article['title'] %></h2>
            <p><%= article['description'] %></p>
            <a href="<%= article['url'] %>" target="_blank">Read More</a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

